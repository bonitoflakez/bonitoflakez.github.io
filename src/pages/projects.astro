---
import BaseHead from "../components/BaseHead.astro";
import Navbar from "../components/Navbar.astro";
import Footer from "../components/Footer.astro";
import GithubLogo from "../components/GithubLogo.astro";
import WebLogo from "../components/WebLogo.astro";
import { projectsData } from "../utils/projectsData.js";

const title = "Projects";
---

<html lang="en">
  <head>
    <BaseHead
      title={title}
      description=""
    />
  </head>

  <body>
    <Navbar />
    <main>
      <div class="projects">
        <h3 class="text-xl font-medium my-2 underline underline-offset-4">Projects</h3>
        <ul class="decoration-none grid grid-cols-1 gap-4">
          {
            projectsData.map((project) => (
              <a href={project.repo_link} target="_blank">
                <li class="project">
                  <div class="project-card p-4">
                    <div class="project-info">
                      <h3 class="m-0 p-0 text-base md:text-lg">{project.title}</h3>
                      <p class="text-xs md:text-sm line-clamp-2 m-0 p-0">{project.desc}</p>
                    </div>
                    {project.tags && (
                      <div class="tags text-xs flex items-center gap-x-2">
                        {project.tags.map((tag) => (
                          <span class="tag">#{tag}</span>
                        ))}
                      </div>
                    )}
                  </div>
                </li>
              </a>
            ))
          }
        </ul>
      </div>
    </main>
    <Footer />
    <style>
      .project-card {
        border-left: 1px solid var(--border);
        background: var(--card);
        transition: background 0.1s ease-in;
      }

      .project-card:hover {
        background: var(--card-hvr);
      }

      .tags .tag {
        border: 1px solid var(--border);
        padding: 0.25em 0.5em;
        background: var(--card-hvr);
      }

      p {
        padding: 1rem 0rem;
        line-height: 1.6;
      }

      .spec-card {
        background: var(--card);
        border: 1px solid var(--border);
      }

      li {
        font-size: 0.75rem;
      }

      @media (min-width: 768px) {
        li {
          font-size: 1rem;
        }
      }
    </style>
  </body>
</html>
